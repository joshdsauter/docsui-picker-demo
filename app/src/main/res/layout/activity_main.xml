<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Header Text -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_title"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Buttons with equal width -->
    <Button
        android:id="@+id/openDocumentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_document"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/createDocumentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_document"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/openDocumentTreeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_document_tree" />

</LinearLayout>

