<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/openDocumentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_document"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/createDocumentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_document"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/openDocumentTreeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_folder"/>

</LinearLayout>
